  "criteria": [
    {
      "id": "topology",
      "desc": "Explicitly identifies single-stage single-ended current-mirror OTA with high-swing output path.",
      "required": true,
      "section": "Topology",
      "patterns_any": [
        "current mirror",
        "high-swing",
        "single-stage",
        "single-ended"
      ],
      "min_any": 2,
      "anti_patterns": [
        "cascode",
        "two-stage",
        "telescopic",
        "folded cascode"
      ],
      "weight": 0.1
    },
    {
      "id": "key_relation",
      "desc": "States GBW ≈ (gm/CL) multiplied by the mirror ratio k from the inner 5T core to the output devices: GBW ≈ (gm/CL)*k.",
      "required": true,
      "patterns_any": [
        "k*gm/CL",
        "(gm/CL)*k",
        "gm/CL * k"
      ],
      "anti_patterns": [
        "ro*C_L sets GBW",
        "CL/gm",
        "gm*CL",
        "gm/C_L"
      ],
      "weight": 0.4
    },
    {
      "id": "device_identification",
      "desc": "Identifies which device provides gm for GBW (input transistor).",
      "patterns_any": [
        "gm_M",
        "M1",
        "M2",
        "input",
        "gm of M"
      ],
      "min_any": 1,
      "weight": 0.05
    },
    {
      "id": "mirror_definition",
      "desc": "Defines a current gain from the diode-connected PMOS in the inner 5T load to the output PMOS/NMOS devices (left branch mirrored through NMOS, right branch directly to vout).",
      "patterns_any": [
        "mirror ratio",
        "current gain",
        "current mirror"
      ],
      "weight": 0.1
    },
    {
      "id": "grounding",
      "desc": "Cites real elements (e.g., M1/M2 for gm, CL, M5/M6/M8 for mirror path).",
      "requires_grounding": true,
      "min_refs": 2,
      "weight": 0.25
    },
    {
      "id": "safety",
      "desc": "Avoids asserting parts that don't exist (no hallucinated IDs).",
      "weight": 0.1
    }
  ],
  "scoring": {
    "hallucination_penalty": 0.25,
    "min_pass": 0.7
  }
}
