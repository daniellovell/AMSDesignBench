        ".param VDD=1\\.8",
        ".param CL=\\d+p",
        "L_in=\\d",
        "L_tail=\\d",
        "L_pmir=\\d",
        "L_phis=\\d",
        "L_ncs=\\d",
        "L_pcs=\\d",
        "W_in=\\d",
        "W_tail=\\d",
        "W_pmir=\\d",
        "W_phis=\\d",
        "W_ncs=\\d",
        "W_pcs=\\d",
        "Vinp.*DC.*AC",
        "Vbias.*DC",
        "Vinn.*DC.*AC"
      ],
      "min_any": 14,
      "anti_patterns": [
        "BLANK"
      ],
      "weight": 15.0
    },
    {
      "id": "transistor_models",
      "desc": "Uses SKY130 models",
      "patterns_any": [
        "sky130_fd_pr__nfet_01v8",
        "sky130_fd_pr__pfet_01v8"
      ],
      "min_any": 2,
      "weight": 5.0
    },
    {
      "id": "verification_dc_gain",
      "desc": "DC gain \u2265 50 dB",
      "verification": true,
      "metric": "dc_gain_db",
      "threshold": 50.0,
      "comparison": ">=",
      "weight": 25.0
