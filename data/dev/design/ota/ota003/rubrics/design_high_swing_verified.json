      "verification": true,
      "metric": "phase_margin_deg",
      "threshold": 60.0,
      "comparison": ">=",
      "weight": 15.0
    },
    {
      "id": "verification_power",
      "desc": "Power \u2264 0.8 mW",
      "verification": true,
      "metric": "power_w",
      "threshold": 0.0008,
