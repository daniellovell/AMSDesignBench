{
  "rubric_id": "design_high_swing_verified",
  "version": "1.0.0",
  "description": "Evaluation rubric for high-swing single-stage OTA with SPICE verification",
  "max_score": 100.0,
  "weights": {
    "completeness": 1.0,
    "verification": 1.0
