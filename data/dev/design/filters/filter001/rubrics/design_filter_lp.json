{
  "criteria": [
    {
      "id": "has_input_source",
      "desc": "Design includes AC input voltage source",
      "required": true,
      "patterns_any": ["Vin.*AC", "V.*vin.*AC"],
      "weight": 10.0
    },
    {
      "id": "has_resistor",
      "desc": "Design includes resistor component",
      "required": true,
      "patterns_any": ["^R[0-9]", "resistor"],
      "weight": 20.0
    },
    {
      "id": "has_capacitor",
      "desc": "Design includes capacitor component",
      "required": true,
      "patterns_any": ["^C[0-9]", "capacitor"],
      "weight": 20.0
    },
    {
      "id": "correct_topology",
      "desc": "RC low-pass topology (R in series, C to ground)",
      "required": false,
      "patterns_any": ["series.*capacitor.*ground", "R.*vin.*vout", "C.*vout.*0"],
      "weight": 30.0
    },
    {
      "id": "has_output",
      "desc": "Design specifies output node",
      "required": true,
      "patterns_any": ["vout", "output"],
      "weight": 10.0
    },
    {
      "id": "reasonable_values",
      "desc": "Component values are in reasonable ranges",
      "required": false,
      "patterns_any": ["[0-9]+[kKmMuUnNpP]", "[0-9]+e[-+][0-9]"],
      "weight": 10.0
    }
  ]
}

