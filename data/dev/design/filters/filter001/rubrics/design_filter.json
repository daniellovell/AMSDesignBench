      ],
      "weight": 0.3
    },
    {
      "id": "has_input_output",
      "desc": "Design specifies input and output nodes",
      "required": true,
      "patterns_any": [
        "vin",
        "vout"
      ],
      "weight": 0.2
    },
    {
      "id": "reasonable_values",
      "desc": "Component values are specified",
      "required": false,
      "patterns_any": [
        "[0-9]+[kKmMuUnNpP]",
        "[0-9]+e[-+][0-9]"
      ],
      "weight": 0.3
